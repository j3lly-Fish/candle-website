# Docker Environment Variables
# Copy this file to .env and update the values

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Candle E-commerce <noreply@yourdomain.com>
EMAIL_SECURE=true
ADMIN_EMAIL=admin@yourdomain.com

# Grafana Configuration
GRAFANA_PASSWORD=secure_admin_password

# Optional: External backup configuration
REMOTE_BACKUP_HOST=backup-server.example.com
REMOTE_BACKUP_USER=backup-user
REMOTE_BACKUP_PATH=/backups/candle-ecommerce